<!DOCTYPE html>
<html>
  <head>
    <title>Cookbook</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Chewy" rel="stylesheet">
  </head>

  <body>
    <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
      <%= image_tag "logo.png" %>
      <% end %>
    </div>
    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Cookbook", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <ul>
      <li class="category">Social</li>
      <li><button class="button"><a href="#">Twitter</a></button></li>
      <li><a href="#">Facebook</a></li>
      <li><a href="#">Email</a></li>
    </ul>

    <% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
		<% end %>
    </div>


    <div id="main_content">
      <div id="header">

        <% if current_page?(root_path) %>
        <p>All Recipes</p>
        <% elsif current_page?(about_path)%>
        <p>About</p>
        <% else %>
        <%= link_to "Back to All Recipes", root_path %>
        <% end  %>


        <div class="buttons">
          <button class="button"><%= link_to "New Recipes", new_recipe_path %></button>

          <button class="button">Log Out</button>
        </div>

      </div>
      <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
      <% end %>
      <%= yield %>
    </div>


  </body>
</html>
