<div class="container">
  <%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
  <div id="errors">
    <h2><%= pluralize(@recipe.errors.count, "errors") %> prevent this recipe from saving</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </p>
  <p>
    <%= f.label :direction%><br>
    <%= f.text_area :direction%>
  </p>
  <p>
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>

</div>
